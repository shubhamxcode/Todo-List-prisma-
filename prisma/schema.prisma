
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  name String
  todo Todo[]
}

model Todo{
  id Int @id @default(autoincrement())
  MorningTask String
  EveningTask String
  NightTask String
  publish Boolean @default(false)
  author User @relation(fields: [authorId],references: [id])
  authorId Int
}